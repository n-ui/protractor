{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "outDir": "typeScript",
        "mapRoot": "typeScript",
        "typeRoots": [ "./node_modules/@types" ],
        "types": ["node","cucumber"],
    },
    "exclude": [
        "node_modules",
        "typescript"
    ]
}